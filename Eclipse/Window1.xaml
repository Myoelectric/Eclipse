<Window x:Class="Eclipse.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eclipse"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="300"
        BorderThickness="0" WindowStyle="ToolWindow">
    <Grid>
        <TextBox x:Name="TextBoxMenuSize" HorizontalAlignment="Left" Height="23" Margin="90,14,0,136" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100" />
        <Button x:Name="ButtonSave" Content="Save" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="TextBoxOpenDelay" HorizontalAlignment="Left" Height="23" Margin="90,45,0,105" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100"/>
        <Label x:Name="LabelMenuSize" Content="Menu Size:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,137" Width="75"/>
        <Label x:Name="LabelOpenDelay" Content="Open Delay:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,41,0,106"/>
    </Grid>
</Window>
